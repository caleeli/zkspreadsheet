<?xml version="1.0" encoding="UTF-8"?>
<language-addon>
	<addon-name>zssapp</addon-name>
	<language-name>xul/html</language-name>

	<component>
		<component-name>colorbutton</component-name>
		<component-class>org.zkoss.zss.app.zul.Simplecolorbutton</component-class>
		<widget-class>zssapp.Simplecolorbutton</widget-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>mold/simplecolorbutton.js</mold-uri>
			<css-uri>css/simplecolorbutton.css.dsp</css-uri>
		</mold>
	</component>

	<component>
		<component-name>dropdownbutton</component-name>
		<component-class>org.zkoss.zss.app.Dropdownbutton</component-class>
		<widget-class>zssapp.Dropdownbutton</widget-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>mold/dropdownbutton.js</mold-uri>
			<css-uri>css/dropdownbutton.css.dsp</css-uri>
		</mold>
	</component>
	
	<component>
		<component-name>cellmenupopup</component-name>
		<extends>menupopup</extends>
		<component-class>org.zkoss.zss.app.zul.CellMenupopup</component-class>
	</component>
	
	<component>
		<component-name>sheets</component-name>
		<extends>div</extends>
		<component-class>org.zkoss.zss.app.zul.Sheets</component-class>
	</component>
	
	<component>
		<component-name>cellcontext</component-name>
		<extends>window</extends>
		<component-class>org.zkoss.zss.app.zul.CellContext</component-class>
	</component>
	
	<component>
		<component-name>fontfamily</component-name>
		<extends>div</extends>
		<component-class>org.zkoss.zss.app.zul.FontFamily</component-class>
	</component>
	
	<component>
		<component-name>fontsize</component-name>
		<extends>div</extends>
		<component-class>org.zkoss.zss.app.zul.FontSize</component-class>
	</component>
	
	<component>
		<component-name>fontboldbutton</component-name>
		<extends>toolbarbutton</extends>
		<component-class>org.zkoss.zss.app.zul.FontBoldButton</component-class>
	</component>
	
	<component>
		<component-name>borderbutton</component-name>
		<extends>dropdownbutton</extends>
		<component-class>org.zkoss.zss.app.zul.Borderbutton</component-class>
	</component>

	<component>
		<component-name>zssapp</component-name>
		<extends>div</extends>
		<component-class>org.zkoss.zss.app.zul.Zssapp</component-class>
	</component>
