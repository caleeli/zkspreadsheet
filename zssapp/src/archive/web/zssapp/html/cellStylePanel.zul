<zk>
	<style>
		.arialFont .z-menu-item-cnt, .arialFont .z-combo-item-text{
		font-size:14px; font-family:arial; } .calibriFont
		.z-menu-item-cnt, .calibriFont .z-combo-item-text{
		font-size:14px; font-family:calibri; } .timeFont
		.z-menu-item-cnt,.timeFont .z-combo-item-text{ font-size:14px;
		font-family:time new roman; } .courierFont
		.z-menu-item-cnt,.courierFont .z-combo-item-text{
		font-size:14px; font-family:courier new; } .comicFont
		.z-menu-item-cnt,.comicFont .z-combo-item-text{ font-size:14px;
		font-family:comic Sans MS; } .centuryFont
		.z-menu-item-cnt,.centuryFont .z-combo-item-text{
		font-size:14px; font-family:century gothic; } .georgiaFont
		.z-menu-item-cnt,.georgiaFont .z-combo-item-text{
		font-size:14px; font-family:georgia; } .impactFont
		.z-menu-item-cnt,.impactFont .z-combo-item-text{ font-size:14px;
		font-family:impact; }
	</style>
	<hlayout id="container" height="100%" spacing="0">
		<combobox id="fontFamily" mold="rounded" width="125px">
			<comboitem label="Calibri" sclass="calibriFont" />
			<comboitem label="Courier New" sclass="courierFont" />
			<comboitem label="Comic Sans MS" sclass="comicFont" />
			<comboitem label="Times New Roman" sclass="timeFont" />
			<comboitem label="Century Gothic" sclass="centuryFont" />
			<comboitem label="Georgia" sclass="georgiaFont" />
			<comboitem label="Impact" sclass="impactFont" />
		</combobox>
		<combobox  id="fontSize" mold="rounded" width="50px">
			<comboitem label="8" />
			<comboitem label="9" />
			<comboitem label="10" />
			<comboitem label="11" />
			<comboitem label="12" />
			<comboitem label="14" />
			<comboitem label="16" />
			<comboitem label="18" />
			<comboitem label="20" />
			<comboitem label="22" />
			<comboitem label="24" />
			<comboitem label="26" />
			<comboitem label="28" />
			<comboitem label="36" />
			<comboitem label="48" />
			<comboitem label="72" />
		</combobox>
		<toolbarbutton id="boldBtn" image="~./zssapp/image/edit-bold.png" tooltiptext="${c:l('font.bold')}"></toolbarbutton>
		<toolbarbutton id="italicBtn" image="~./zssapp/image/edit-italic.png" tooltiptext="${c:l('font.italic')}"></toolbarbutton>
		<toolbarbutton id="underlineBtn" image="~./zssapp/image/edit-underline.png" tooltiptext="${c:l('font.underline')}"></toolbarbutton>
		<toolbarbutton id="strikethroughBtn" image="~./zssapp/image/edit-strike.png" tooltiptext="${c:l('font.strike')}"></toolbarbutton>
		<colorbutton id="fontColorBtn" width="20px" height="12px" color="#000000" image="~./zssapp/image/edit-color.png" tooltiptext="${c:l('font.color')}"></colorbutton>
		<colorbutton id="cellColorBtn" width="20px" height="12px" color="#FFFFFF" image="~./zssapp/image/paint-can-color.png" tooltiptext="${c:l('font.fill')}"></colorbutton>
		<dropdownbutton id="borderBtn" image="~./zssapp/image/border-bottom.png" forward="onClick=onBorderSelector(${c:l('border.bottom')})" tooltiptext="${c:l('border.bottom')}">
			<menupopup >
				<menuitem label="${c:l('border.bottom')}" image="~./zssapp/image/border-bottom.png"
					forward="onBorderSelector(${c:l('border.bottom')})" />
				<menuitem label="${c:l('border.top')}" image="~./zssapp/image/border-top.png"
					forward="onBorderSelector(${c:l('border.top')})" />
				<menuitem label="${c:l('border.left')}" image="~./zssapp/image/border-left.png"
					forward="onBorderSelector(${c:l('border.left')})" />
				<menuitem label="${c:l('border.right')}" image="~./zssapp/image/border-right.png"
					forward="onBorderSelector(${c:l('border.right')})" />
				<menuseparator />			
				<menuitem label="${c:l('border.no')}" image="~./zssapp/image/border.png"
					forward="onBorderSelector(${c:l('border.no')})" />
				<menuitem label="${c:l('border.full')}" image="~./zssapp/image/border-all.png"
					forward="onBorderSelector(${c:l('border.full')})" />
				<menuitem label="${c:l('border.outside')}"	image="~./zssapp/image/border-outside.png"
					forward="onBorderSelector(${c:l('border.outside')})" />
				<menuitem label="${c:l('border.inside')}" image="~./zssapp/image/border-inside.png"
					forward="onBorderSelector(${c:l('border.inside')})" />
				<menuseparator />
				<menuitem label="${c:l('border.insideHorizontal')}" image="~./zssapp/image/border-horizontal.png"
					forward="onBorderSelector(${c:l('border.insideHorizontal')})" />
				<menuitem label="${c:l('border.insideVertical')}" image="~./zssapp/image/border-vertical.png"
					forward="onBorderSelector(${c:l('border.insideVertical')})" />
<!--				 NOT IMPLEMENT menuitem label="${c:l('border.diagonalDown')}" image="~./zssapp/image/border-down.png"-->
<!--					forward="onBorderSelector(${c:l('border.diagonalDown')})" />-->
<!--				<menuitem label="${c:l('border.diagonalUp')}" image="~./zssapp/image/border-up.png"-->
<!--					forward="onBorderSelector(${c:l('border.diagonalUp')})" /-->
			</menupopup>
		</dropdownbutton>
		<toolbarbutton id="alignLeftBtn" image="~./zssapp/image/edit-alignment.png" tooltiptext="${c:l('align.left')}"
							forward="onClick=onAlignHorizontalClick(left)">	</toolbarbutton>
		<toolbarbutton id="alignCenterBtn" image="~./zssapp/image/edit-alignment-center.png" tooltiptext="${c:l('align.center')}"
							forward="onClick=onAlignHorizontalClick(center)"></toolbarbutton>
		<toolbarbutton id="alignRightBtn" image="~./zssapp/image/edit-alignment-right.png" tooltiptext="${c:l('align.right')}"
							forward="onClick=onAlignHorizontalClick(right)" ></toolbarbutton>
		<toolbarbutton id="wrapTextBtn" image="~./zssapp/image/wrapText.gif" tooltiptext="Wrap Text"></toolbarbutton>				
	</hlayout>
</zk>