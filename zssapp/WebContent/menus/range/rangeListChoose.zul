<window id="rangeChooseWin" title="Choose Range" border="normal" position="center" closable="true" width="480px">
	<zscript> <![CDATA[
	import org.zkoss.zss.app.SimpleListModelIgnoreCase;
	import org.zkoss.zss.app.RangeHelper;
	RangeHelper rh = new RangeHelper(Path.getComponent("//p1/mainWin/ss1"));
	String[] rangeNames = rh.getRangeList();
	ListModel strset = new SimpleListModelIgnoreCase(rangeNames);
	]]></zscript>
	<vlayout style="padding:5px;">
		<div style="padding-bottom:5px;">Existed Ranges:</div>
		<listbox id="rcw_rangeList" model="${strset}"
			forward="onSelect=//p1/mainWin.onRange(selectChangeChoose)">
		</listbox>
		<div style="padding: 5px 0 5px 0;">
			<button image="/img/tick.png" forward="//p1/mainWin.onRange(choose)" mold="trendy">
			</button>
		</div>
	</vlayout>
	<attribute name="onCreate">
		rcw_rangeList.selectedIndex = 0;
	</attribute>
</window>

